@using ViverBem.Domain.Interfaces
@inject IUser user
@model IEnumerable<ViverBem.Application.ViewModels.PropostasViewModel>

@{
    ViewData["Title"] = "Lista das Propostas";
}

<h1>@ViewData["Title"]</h1>

<td>
    <a asp-action="Create" class="btn btn-danger"><span class="glyphicon glyphicon-arrow-right"></span> Nova Proposta</a>
</td>
<td>
    <a asp-action="ImportaPropostas" class="btn btn-warning"><span class="glyphicon-arrow-up"></span> Importar Propostas</a>
</td>
<td>
    <a asp-action="AtualizarPropostas" class="btn btn-warning"><span class="glyphicon">Atualizar Propostas</span></a>
</td>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dt_venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodCombo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @item.Dt_venda.ToString("d")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodCombo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><span class="glyphicon glyphicon-search"></span> Ver Detalhes</a>
            </td>
        </tr>
        }


    </tbody>
</table>

