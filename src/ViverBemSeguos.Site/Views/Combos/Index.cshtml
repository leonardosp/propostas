@model IEnumerable<ViverBem.Application.ViewModels.ComboPrincViewModel>

@{
    ViewData["Title"] = "Lista dos Combos";
}

<h1>@ViewData["Title"]</h1>


<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Corretor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodCombo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Corretor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodCombo)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.comboPrincId" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Ver Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
