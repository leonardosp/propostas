@model ViverBem.Application.ViewModels.ComboPrincViewModel

@{
    ViewData["Title"] = "Detalhes do Combo";
}

<div class="jumbotron">
    <h2>@ViewData["Title"]</h2>
    <h4>@Model.CodCombo</h4>
</div>


<div class="container">
    <div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-2">
                    <b>Nome: </b>
                    @Html.DisplayFor(model => model.CodCombo)
                </div>
                <div class="col-sm-2">
                    <b>Corretor: </b>
                    @Html.DisplayFor(model => model.Corretor)
                </div>
            </div>
        </div>
        
        <hr />
        <br />
        <br />
        <div class="row">  
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Cod. Combo</th>
                        <th>Plano</th>
                        <th>Pla.Prin.Serv.</th>
                        <th>Vlr Premio</th>
                        <th>Vlr Capital</th>
                    </tr>
                </thead>
                    @foreach (var item in Model.CombosItems)
                    {
                        <tr>
                            <td>@item.CodCombo</td>
                            <td>@item.PlanoSrv</td>
                            <td>@item.PlaPrinServ</td>
                            <td>@item.VlrPremio</td>
                            <td>@item.VlrCapital</td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Combo")
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger">Editar Combo</a> 
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Adicionar Planos</button>
    <a asp-action="Index" class="btn btn-default">Voltar para a listagem</a>
</div>
